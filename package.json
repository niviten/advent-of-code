{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "My solutions to Advent of Code problems",
  "scripts": {
    "clean": "rimraf dist",
    "copy-files": "copyfiles -u 1 \"src/**/*.txt\" dist",
    "build": "npm run clean && npm run copy-files && tsc",
    "prestart": "npm run build",
    "start": "node dist",
    "predev": "npm run build",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.5.0",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
